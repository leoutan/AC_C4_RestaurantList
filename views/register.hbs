<div class="container" style="max-width: 600px;">
  
  <form action="/register" method="post">
    <div class="card">
      <div class="card-header">
        <h3>Register Page</h3>
      </div>
      {{> message}}
      <div class="card-body">
        <div class="form-group" style="margin-bottom: 10px;">
          <div style="margin-bottom: 10px;">
            <label for="name">Name</label>
          </div>
          <input type="text" id="name" name="name" placeholder="請輸入用戶名稱">
        </div>

        <div class="form-group" style="margin-bottom: 10px;">
          <div style="margin-bottom: 10px;">
            <label for="email">Email</label>
          </div>
          <input type="text" id="email" name="email" placeholder="請輸入用戶信箱">
        </div>

        <div class="form-group" style="margin-bottom: 10px;">
          <div style="margin-bottom: 10px;">
            <label for="password">Password</label>
          </div>
          <input type="text" id="password" name="password" placeholder="請輸入用戶密碼">
        </div>

        <div class="form-group" style="margin-bottom: 10px;">
          <div style="margin-bottom: 10px;">
            <label for="confirmPassword">Confirm Password</label>
          </div>
          <input type="text" id="confirmPassword" name="confirmPassword" placeholder="請再次輸入密碼">
        </div>
      </div>
      <div class="card-footer">
        <button type="submit">Register</button>
        <p>
          Already has a account ? 
          <span>
            <a href="/login"><i> Login</i></a>
          </span>
        </p>
      </div>
    </div>
  </form>
</div>